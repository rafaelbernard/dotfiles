# ---------- BAR ----------#

# TOP
bar {
        font            pango:mono 10
        font            pango:Ubuntu Mono 12
        tray_output     primary
        position        top
        status_command  bumblebee-status \
                -m cpu load memory amixer brightness bluetooth caffeine layout battery datetz \
                -p datetz.format="%a, %d/%m/%Y %H:%M:%S" datetz.timezone="Pacific/Auckland" datetz.interval=1s \
                -t solarized-powerline
}

# BOTTOM
bar {
        font            pango:mono 8
        font            pango:Ubuntu Mono 10
        position        bottom
        tray_output     none
        status_command  bumblebee-status \
                -m nic disk:home timetz:tor timetz:tau timetz:tnz timetz:br \
                -p home.path=/home \
                    tnz.format="NZ %H:%M" \
                    tau.format="AU %H:%M" \
                    tau.timezone="Australia/Sydney" \
                    tnz.timezone="Pacific/Auckland" \
                    tor.format="OR %d/%m %H:%M" \
                    tor.timezone="America/Los_Angeles" \
                    br.format="BR %d/%m %H:%M:%I" \
                    br.timezone="America/Sao_Paulo" \
                -t dracula-powerline
}

