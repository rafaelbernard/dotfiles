# Application bindings
$terminal = uwsm app -- $TERMINAL
$browser = uwsm app -- firefox --new-window
$firefox = uwsm app -- firefox --new-window
$firefoxapp = $firefox
$open = uwsm app --

$mod = SUPER

# Unbind bindings that might be set somewhere and erase them
# Important to note that a new binding can add a functionality to the same key binding, then better erase the binding before redefining
unbind = SUPER SHIFT, slash
# For window motions
unbind = SUPER SHIFT, H
unbind = SUPER SHIFT, J

bindd = SUPER, RETURN, Terminal, exec, $terminal
bindd = SUPER SHIFT ALT, return, Tmux, exec, $terminal -e tmux
bindd = SUPER SHIFT, F, File manager, exec, uwsm app -- nautilus --new-window
bindd = SUPER SHIFT, B, Browser, exec, $browser
bindd = SUPER SHIFT, N, Editor, exec, omarchy-launch-editor
bindd = SUPER SHIFT, T, Activity, exec, $terminal -e btop
bindd = SUPER SHIFT, D, Docker, exec, $terminal -e lazydocker
bindd = SUPER SHIFT, O, Obsidian, exec, omarchy-launch-or-focus obsidian "uwsm app -- obsidian -disable-gpu --enable-wayland-ime"
bindd = SUPER SHIFT, slash, IntelliJ, exec, uwsm app -- intellij
bindd = SUPER SHIFT, G, DataGrip, exec, uwsm app -- datagrip
bindd = SUPER SHIFT, M, Thunderbird, exec, $open thunderbird
bindd = SUPER SHIFT ALT, H, Postman, exec, $open postman
bindd = SUPER SHIFT, X, Firefox Developer, exec, $open firefox-developer

bindd = SUPER SHIFT, A, ChatGPT, exec, $firefox "https://chatgpt.com"
bindd = SUPER SHIFT ALT, A, Grok, exec, $firefox "https://grok.com"
bindd = SUPER SHIFT CTRL, G, Google Messages, exec, omarchy-launch-or-focus-webapp "Google Messages" "https://messages.google.com/web/conversations"

bind = SUPER CONTROL, K, exec, ~/.local/share/omarchy/bin/omarchy-menu-keybindings
